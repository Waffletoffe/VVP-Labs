#include <iostream>
using namespace std;
int a=0,b=0,c=0,d=0,e=0;
int main()
{
    cout<<"ЛР10п4 Проверить истинность высказывания цифры введённого трёхзначного числа образуют возрастающую или убывающую последовательность\n";
    cout<<" введите трёхзначное число ";
    cin>>d;
    e=d;
    a=e/100;
    e=e%100;
    b=e/10;
    e=e%10;
    c=e;

    if((a<b)&&(b<c)||(a>b)&&(b>c)){
        cout<<"\nИстинно";
        }
    else{
        cout<<"\nЛожно";
    }
    return 0;
}
